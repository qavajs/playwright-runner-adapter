{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "test/**/*.spec.ts"
  ],
  "compilerOptions": {
    "target": "es2018",
    "module": "node16",
    "moduleResolution": "node16",
    "outDir": "./adapter",
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ]
  }
}
